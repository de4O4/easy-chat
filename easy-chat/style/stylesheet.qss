/* 重置密码对话框样式 */

/* 主对话框背景 */
QDialog#ResetDialog {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                                stop:0 #f8f9fa, stop:1 #e9ecef);
    border-radius: 15px;
    border: 2px solid #dee2e6;
}



/* 普通标签样式 */
QLabel {
    color: #495057;
    font-size: 14px;
    font-weight: 500;
    margin-right: 10px;
}

QLabel#userlabel, QLabel#emaillabel, QLabel#newpasslab, QLabel#codelabel {
    min-width: 80px;
    color: #343a40;
    font-weight: 600;
}

/* 输入框样式 */
QLineEdit {
    border: 2px solid #ced4da;
    border-radius: 8px;
    padding: 8px 12px;
    font-size: 14px;
    background-color: #ffffff;
    color: #495057;
    selection-background-color: #007bff;
    selection-color: white;
}

QLineEdit:focus {
    border-color: #007bff;
    background-color: #ffffff;
    outline: none;
    box-shadow: 0 0 0 3px rgba(0, 123, 255, 0.25);
}

QLineEdit:hover {
    border-color: #adb5bd;
}

/* 获取验证码按钮 */
QPushButton#getcodebtn {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                                stop:0 #17a2b8, stop:1 #138496);
    color: white;
    border: none;
    border-radius: 6px;
    padding: 8px 16px;
    font-size: 13px;
    font-weight: 600;
    min-width: 60px;
}

QPushButton#getcodebtn:hover {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                                stop:0 #20c997, stop:1 #1e7e34);
}

QPushButton#getcodebtn:pressed {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                                stop:0 #138496, stop:1 #0f6674);
}

QPushButton#getcodebtn:disabled {
    background-color: #6c757d;
    color: #adb5bd;
}

/* 确认按钮 */
QPushButton#confirmbtn {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                                stop:0 #28a745, stop:1 #1e7e34);
    color: white;
    border: none;
    border-radius: 8px;
    padding: 12px 24px;
    font-size: 16px;
    font-weight: 600;
    min-width: 120px;
}

QPushButton#confirmbtn:hover {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                                stop:0 #34ce57, stop:1 #28a745);
    transform: translateY(-1px);
}

QPushButton#confirmbtn:pressed {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                                stop:0 #1e7e34, stop:1 #155724);
}

/* 返回按钮 */
QPushButton#returnbtn {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                                stop:0 #6c757d, stop:1 #545b62);
    color: white;
    border: none;
    border-radius: 8px;
    padding: 12px 24px;
    font-size: 16px;
    font-weight: 600;
    min-width: 120px;
}

QPushButton#pushButton_2:hover {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                                stop:0 #828a91, stop:1 #6c757d);
    transform: translateY(-1px);
}

QPushButton#pushButton_2:pressed {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                                stop:0 #545b62, stop:1 #3a4145);
}

/* 通用按钮样式 */
QPushButton {
