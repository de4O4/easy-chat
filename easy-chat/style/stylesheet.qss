    font-weight: 500;
    min-width: 60px;
    text-align: right;
}

registerDialog QLineEdit#varifyedit {
    min-width: 180px;
}

registerDialog QPushButton#getcodebut {
    background: #FF922B;
    color: white;
    margin-left: 8px;
    padding: 0 12px;
}

registerDialog QPushButton#confirmbut {
    background: #4263EB;
    color: white;
    margin-right: 8px;
}
registerDialog QPushButton#cancelbut {
    background: #ADB5BD;
    color: white;
    margin-left: 8px;
}

