    border-radius: 6px;
}

QScrollBar::handle:vertical {
    background: #c1c8cd;
    border-radius: 6px;
    min-height: 20px;
}

QScrollBar::handle:vertical:hover {
    background: #a8b2b9;
}

/* 工具提示样式 */
